{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@nextjs": [
        "../../lumen-cms-nextjs/src/"
      ],
      "@core": [
        "../src/"
      ],
      "@polyfills": [
        "../client/polyfills.js"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
